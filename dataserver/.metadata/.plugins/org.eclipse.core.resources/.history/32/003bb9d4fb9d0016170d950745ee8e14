package dataFrame;

/**
 * 
 * @author Zhaohong Jin
 * The Data Source is Yahoo! Finance
 *
 */
public class DataPoint {
	
	//features
	public String stockName;
	public String ticker;
	public int date; //for example, 1999/11/18 = 19991118
	public float open; //opening price
	public float high; //highest price of the day
	public float low; //lowest price of the day
	public float close; //closing price
	public int volume; //total volume in dollars
	public float movingAvaerageFiveDay; //moving average in 5 days
	public float movingAverageTenDay; //moving average in 10 days
	public float rateOfChangeFiveDay; // The ratio of the current price to the price 5 quotes earlier
	public float rateOfChangeTenDay; // The ratio of the current price to the price 10 quotes earlier
	public float spyClose; //closing price of S&P500 that day
	public float djiClose; //closing price of Dow Jones that day
	public float ixicClose; //closing price of Nasdaq that day
	public float tnxClose; //closing price of 10-yr bond that day
	public float vixClose; //closing volatility of S&P500 that day
	
	
	public int label; // 1 if tomorrow's closing price is higher, 0 otherwise
	
}
